doctype html
html(ng-app="jApp")
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src="/javascripts/angular.js")
        script(src="/javascripts/ang1.js")
    body(ng-controller="jListCtrl")
        div
            input(ng-model="jQuery")
            //-
                input(ng-model="jQuery.$") // all
                input(ng-model="jQuery.name")
                input(ng-model="jQuery.snippet")
        div
            ul
                li(ng-repeat="elem in jElements | filter:jQuery")
                    | {{elem.name}}, {{elem.snippet}}
